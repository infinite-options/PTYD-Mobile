<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InfiniteMeals.ViewModel.MealSelect.MenuView"
             Title="Menu">
<ContentPage.Content>
		<ListView x:Name ="lstView" IsGroupingEnabled="false" GroupDisplayBinding="{Binding LongName}"
            VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" HasUnevenRows="True" SelectionMode="None" >
			<ListView.ItemTemplate>
				<DataTemplate>
                    <ViewCell>
                        <Grid>
                             <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                            <Label Text="{Binding name}"
                                   FontFamily="CapsRegular"
                                   FontSize="Body"/>

                            <Image Source="{Binding imageUrl}"  Grid.RowSpan="2"></Image>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</ContentPage.Content>
</ContentPage>
