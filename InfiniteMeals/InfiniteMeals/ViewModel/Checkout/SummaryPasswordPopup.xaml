<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage   xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             x:Class="InfiniteMeals.ViewModel.Checkout.SummaryPasswordPopup">
 
    <StackLayout Margin="25" Padding="25" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="White">
        <Label FontFamily="CapsRegular" Text="Confirm Password" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center"/>

        <Entry x:Name="passwordEntry" WidthRequest="150" Placeholder="Password" IsPassword="True" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center"/>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
            <Button FontFamily="CapsRegular" Text="Cancel" HeightRequest = "30" Padding = "10"  TextColor="White" BackgroundColor="Red" Clicked="CancelClicked"/>
            <Button FontFamily="CapsRegular" Text="Confirm" HeightRequest = "30" Padding="10" TextColor="White" BackgroundColor="Green" Clicked="ConfirmClicked"/>
        </StackLayout>

    </StackLayout>
</pages:PopupPage>